<%- include('admin-dashboard-navigation.ejs') %>

<% if (messageInfo !== "undefined") { %>
    <%- include('../admin/partials/message.ejs',messageInfo ) %>
<% } %>

<div class="container custom-container">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-9">
                    <h3 class="panel-title text-center ml-5 pl-5">All Campaign  Category</h3>
                </div>


                <div class="col-3 text-right">
                    <a href="/admin/dashboard/create/campaign-category" class="btn btn-primary" role="button" >Create Category
                    </a>
                </div>

                <div class="ml-5 mt-3">
                    <form action="/admin/dashboard/show/campaign-category" method="post" style=" display:inline!important;">
           <span>
            Show
            <select name="totalRecordPerPage" onchange='this.form.submit()'>
              <option value="10" selected disabled hidden>10</option>
              <option value="10">10</option>
              <option value="50">50</option>
              <option value="100">100</option>
              <option value="all">ALL</option>
            </select>
            entries
          </span>
                    </form>


                    <span style="margin-left: 635px;">
            Search: <input type="text" id="search_data">
            </span>
                </div>


            </div>
        </div>

        <div class="card-body">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Image</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>

                <% categories.forEach(item => { %>
                    <tr>
                        <td><%= item.id %></td>
                        <td><%= item.name %></td>
                        <td><%= item.description %></td>
                        <td>

                            <div class="categroy_image">
                                <img src="<%= item.image %>" class="img-thumbnail" alt="error ">
                            </div>
                        </td>


                        <td style="width:140px;">
                        <td>
                            <a class="btn btn-warning custom-btn-link"
                               href="/admin/dashboard/campaign-category/edit/<%= item.id %>">
                                <i class="fa fa-pencil-square" aria-hidden="true"></i> </a>

                            <a class="btn btn-danger custom-btn-link"
                               href="/admin/dashboard/campaign-category/delete/<%= item.id %>"
                               onclick="return confirm('Are you really want to delete')">
                                <i class="fa fa-trash" aria-hidden="true">
                                </i>
                            </a>

                        </td>
                    </tr>
                <% }); %>
                </tbody>
            </table>

            <hr>

            <ul class="pagination  justify-content-center">

                <li class="page-item disabled ">
                    <a class="page-link" href="/admin/dashboard/show/category/page?page=-1" aria-label="Previous">
                        <span aria-hidden="true">Previous</span>
                    </a>
                </li>


                <li class="page-item active">
                    <a class="page-link" href="/admin/dashboard/show/category/page?page=0">1</a>
                </li>
                <li class="page-item disabled">
                    <a class="page-link" href="/admin/dashboard/show/category/page?page=1" aria-label="Next">
                        <span aria-hidden="true">Next</span>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</div>
</body>
</html>