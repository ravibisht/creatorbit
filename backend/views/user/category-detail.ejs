<%- include('../user/partials/header.ejs',{title:'Category Detail'}) %>

    <%- include('../user/partials/head.ejs') %>

        <body>

            <div class="category-top-banner" style="background-image: url(<%=category.image%>);">

                <h1 class="main-heading">
                    <%= category.name %>
                </h1>

                <p class="sub-heading">
                    <%= category.description %>
                </p>


                <p class="sub-heading no-of-campaign">
                    Total Campaign  : <%= category._count.campaign%>
                </p>


            </div>


            <main>
                <div class="card-container" style="margin-top:2rem;">
                    <% category.campaign?.forEach(item=> { %>

                        <div class="card">
                            <div class="card__header">
                                <div class="card__picture">
                                    <img src="<%= item.image %> " alt="<%= item.name %>" class="card__picture-img" />
                                </div>

                                <h3 class="heading-tertirary">
                                    <span>
                                        <%= item.name %>
                                    </span>
                                </h3>
                            </div>

                            <div class="card__details">
                                <h4 class="card__sub-heading">
                                    <%= item.shortDesc %>
                                </h4>
                                <p class="card__text">
                                    <%= item.description %>
                                </p>

                                <div class="card__category">
                                    <p>
                                        <%= category.name %>
                                    </p>
                                </div>
                                <div class="card__data">
                                    <svg class="card__icon">
                                        <use xlink:href="img/icons.svg#icon-calendar"></use>
                                    </svg>
                                    <span>
                                        <%= moment(item.startDate).format('ddd, MMMM-YYYY hh:mm A') %>
                                    </span>
                                </div>
                                <div class="card__data">
                                    <svg class="card__icon">
                                        <use xlink:href="img/icons.svg#icon-calendar"></use>
                                    </svg>
                                    <span>
                                        <%= moment(item.endDate).format('ddd, MMMM-YYYY hh:mm A') %>
                                    </span>
                                </div>
                                <div class="card__data">
                                    <image class="card__icon" src="img/rupee.svg" />
                                    <span style="padding-left: 10px;"> 3 stops</span>
                                </div>
                                <div class="card__data">
                                    <svg class="card__icon">
                                        <use xlink:href="img/icons.svg#icon-user"></use>
                                    </svg>
                                    <span>25 people</span>
                                </div>
                            </div>

                            <div class="card__footer">
                                <a href="/campaign/<%= item.id %>" class="btn btn--green btn--small">Details</a>
                            </div>
                        </div>
                        <% }); %>

                </div>

            </main>
        </body>

        <%- include('../user/partials/footer.ejs') %>